<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.demo.mapper.ActorMapper">
	<resultMap type="com.ssm.demo.po.Actor" id="actorMap">
        <id column="actor_id" property="id" ></id>
        <result column="first_name" property="first_name"/>
        <result column="last_name" property="last_name"/>
        <result column="last_update" property="last_update"/>
    </resultMap>
    
	<select id="getAllactors" resultMap="actorMap">
		select * from actor
	</select>
	<update id="updateActorbyid" parameterType="com.ssm.demo.po.Actor">
		update actor set 
		first_name=#{first_name},last_name=#{last_name},last_update=#{last_update}
		where actor_id=#{id}
	</update>
	<select id="getactorbyid" resultMap="actorMap" parameterType="short">
		select * from actor where actor_id=#{id} 
	</select>
	<insert id="insertActor" useGeneratedKeys="true" keyProperty="id" parameterType="com.ssm.demo.po.Actor">
	  insert into actor (first_name,last_name,last_update)
	  values (#{first_name},#{last_name},#{last_update})
	</insert>
	<delete id="delete" parameterType="short">
		delete from actor where actor_id=#{id}
	</delete>
</mapper>